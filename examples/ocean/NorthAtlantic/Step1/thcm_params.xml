<!-- ******************************* -->
<!-- Standard ocean model parameters -->
<!--                                 -->
<!-- ******************************* -->

<ParameterList name="Ocean">

  <!-- Specify whether the ocean model should initialize with                -->
  <!-- an old state (true) or with a zero solution (false).                  -->
  <!-- In a coupled situation this will be partly overruled by the parameter -->
  <!-- specified in CoupledModel                                             -->
  <Parameter name="Load state" type="bool" value="false"/>
  <Parameter name="Save state" type="bool" value="false"/>
  <Parameter name="Input file"  type="string" value="ocean_input.h5" />
  <Parameter name="Output file" type="string" value="ocean_output.h5" />

  <!-- To keep track of each converged state, enable this. -->
  <Parameter name="Store everything" type="bool" value="false" />
 
  <!-- Parameters that affect THCM { -->
  <ParameterList name="THCM">
    <!-- a descriptive name to identify the settings -->
    <Parameter name="Problem Description" type="string" value="Scale"/>
    <!-- continuation parameter if you choose "Backward" or "Exponent" in loca_params.xml -->
    <Parameter name="Continuation Parameter Scaling" type="double" value="-1.0"/>
    <Parameter name="Starting Solution File" type="string" value="ReferenceSolution.h5"/>
    <Parameter name="Backup Interval" type="double" value="0.25"/>
    <!-- western domain bound -->
    <Parameter name="Global Bound xmin" type="double" value="262"/>
    <!-- eastern domain bound -->
    <Parameter name="Global Bound xmax" type="double" value="350"/>
    <!-- southern domain bound -->
    <Parameter name="Global Bound ymin" type="double" value="10"/>
    <!-- northern domain bound -->
    <Parameter name="Global Bound ymax" type="double" value="74"/>
    <!-- periodic boundary conditions in x-direction -->
    <Parameter name="Periodic" type="bool" value="0"/>
    <!-- depth of the ocean -->
    <Parameter name="Depth hdim" type="double" value="4000"/>
    
    <!-- grid stretching in z-direction (defaults to 1.0)          -->
    <!-- I think the preconditioner does not handle this correctly,-->
    <!-- but in some cases it may work                             -->
    <Parameter name="Grid Stretching qz" type="double" value="2.0"/>
    <!-- global number of grid points in x-direction -->
    <Parameter name="Global Grid-Size n" type="int" value="176"/>
    <!-- global number of grid points in y-direction -->
    <Parameter name="Global Grid-Size m" type="int" value="128"/>
    <!-- global number of grid points in z-direction -->
    <Parameter name="Global Grid-Size l" type="int" value="16"/>

    <!-- topography:                                -->
    <!-- 0: from data                               -->
    <!-- 1: no land                                 -->
    <!-- others not tested, but this is 'itopo' in  -->
    <!-- THCM language                              -->
    <Parameter name="Topography" type="int" value="0"/>
    <!-- remove bottom profile? (flat in THCM)      -->
    <Parameter name="Flat Bottom" type="bool" value="0"/>
    <!-- read mask from a file in mkmask The filename is hard-coded in   -->
    <!-- topo.F90.                                                       -->
    <Parameter name="Read Land Mask" type="bool" value="1"/>
    <!-- name of land mask file (assumed to be in topdir/data/mkmask/)   -->
    <Parameter name="Land Mask" type="string" value="mask_scale_0.5deg_no_pacific"/>
    <Parameter name="Read Salinity Perturbation Mask" type="bool" value="1"/>
    <Parameter name="Salinity Perturbation Mask" type="string" value="spertm.scale_0.5deg"/>
    <!-- make sure this is not a land point -->
    <Parameter name="Integral row coordinate i" type="int" value="174"/>
    <Parameter name="Integral row coordinate j" type="int" value="126"/>

    <!-- =============================================================== -->
	
    <!-- Starting Parameters -->
    <ParameterList name="Starting Parameters">
      <Parameter name="AL_T" type="double" value="1.659267448894655e-01"/>
      <Parameter name="Rayleigh-Number" type="double" value="7.595257183847420e-02"/>
      <Parameter name="Vertical Ekman-Number" type="double" value="4.285518376302798e-07"/>
      <Parameter name="Horizontal Ekman-Number" type="double" value="1.689835695206996e-05"/>
      <Parameter name="Rossby-Number" type="double" value="1.076425337846857e-04"/>
      <Parameter name="MIXP" type="double" value="0.000000000000000e+00"/>
      <Parameter name="RESC" type="double" value="0.000000000000000e+00"/>
      <Parameter name="SPL1" type="double" value="2.000000000000000e+03"/>
      <Parameter name="Salinity Homotopy" type="double" value="0.000000000000000e+00"/>
      <Parameter name="Solar Forcing" type="double" value="1.000000000000000e+00"/>
      <Parameter name="Horizontal Peclet-Number" type="double" value="1.569858712715856e-03"/>
      <Parameter name="Vertical Peclet-Number" type="double" value="3.981250000000000e-04"/>
      <Parameter name="P_VC" type="double" value="1.000000000000000e+03"/>
      <Parameter name="LAMB" type="double" value="4.222222222222222e+00"/>
      <Parameter name="Salinity Forcing" type="double" value="1.000000000000000e+00"/>
      <Parameter name="Wind Forcing" type="double" value="1.000000000000000e+00"/>
      <Parameter name="Temperature Forcing" type="double" value="1.000000000000000e+00"/>
      <Parameter name="Nonlinear Factor" type="double" value="2.500000000000000e+01"/>
      <Parameter name="Combined Forcing" type="double" value="1.000000000000000e+00"/>
      <Parameter name="ARCL" type="double" value="0.000000000000000e+00"/>
      <Parameter name="NLES" type="double" value="0.000000000000000e+00"/>
      <Parameter name="IFRICB" type="double" value="0.000000000000000e+00"/>
      <Parameter name="CONT" type="double" value="0.000000000000000e+00"/>
      <Parameter name="Energy" type="double" value="1.000000000000000e+02"/>
      <Parameter name="ALPC" type="double" value="1.000000000000000e+00"/>
      <Parameter name="CMPR" type="double" value="0.000000000000000e+00"/>
      <Parameter name="Flux Perturbation" type="double" value="-0.1"/>
      <Parameter name="Salinity Perturbation" type="double" value="0.000000000000000e+00"/>
      <Parameter name="MKAP" type="double" value="0.000000000000000e+00"/>
      <Parameter name="SPL2" type="double" value="1.000000000000000e-02"/>
    </ParameterList>
	
    <!-- Mixing parameter (vmix_GLB in THCM)                                   -->
	<!-- Depending on the choice here, SPL1 and SPL2 should be chosen wisely:  -->
	<!-- Mixing = 1  => SPL1 = 2.0e3, SPL2 = 0.01                               -->
	<!-- Mixing = 2  => SPL1 = 1.25,  SPL2 = 0.01                               -->
    <Parameter name="Mixing" type="int" value="1"/>
	
    <!-- Fred's convective adjustment (rho_mixing in THCM) -->
    <Parameter name="Rho Mixing" type="bool" value="1"/>
    <!-- Taper (tap in usr.F90) -->
    <Parameter name="Taper" type="int" value="1"/>
    <!-- Restoring Temperature-Profile (TRES in THCM) -->
    <!-- 0: non-restoring                             -->
    <!-- 1: restoring                                 -->
    <Parameter name="Restoring Temperature Profile" type="int" value="1"/>
    <!-- Restoring Salt-Profile (SRES in THCM)        -->
    <!-- 0: non-restoring                             -->
    <!-- 1: restoring                                 -->
    <Parameter name="Restoring Salinity Profile" type="int" value="0"/>
    <!-- Forcing type (forcing_type in global.F90) -->
    <!-- 0: data, 1: idealized                     -->
    <Parameter name="Forcing Type" type="int" value="0"/>
    <!-- Temperature forcing                                 -->
    <!-- Levitus Temperature (ite in THCM)                   -->
    <!-- 0: data, 1: idealized                               -->
    <Parameter name="Levitus T" type="int" value="0"/>
    <!-- Levitus Salt (its in THCM) -->
    <!-- 0: data, 1: idealized             -->
    <Parameter name="Levitus S" type="int" value="0"/>
    <!-- Wind Forcing (iza in THCM)       -->
    <!-- 0: data,                         -->
    <!-- 1: zonally averaged              -->
    <!-- 2: idealized                     -->
    <Parameter name="Wind Forcing Type" type="int" value="0"/>
    <!-- Type of scaling applied to the linear systems.                            -->
    <!-- We currently support "None" and "THCM"                                    -->
    <!-- "None" is not really recomended.                                          -->
    <Parameter name="Scaling" type="string" value="THCM"/> 

  </ParameterList> <!-- } THCM -->
  
</ParameterList> <!-- } -->
